---
import Date from "./Date.astro";
import { Picture } from "astro:assets";

const { title, pubDate, coverImage, coverAlt } = Astro.props;
---

<section class="relative">
    <Picture
        src={coverImage}
        alt={coverAlt}
        widths={[600, 900, 1300]}
        sizes={`(max-width: 640px) 600w, (max-width: 1024px) 900w, (min-width: 1024px) 1300w`}
        formats={["avif", "webp"]}
        quality={"max"}
        loading={"eager"}
        fetchpriority={"high"}
        decoding={"sync"}
        class="hero-image object-center object-cover w-full h-full max-h-[600px]"
    />
    <div class="max-w-5xl mx-auto px-6">
        <div class="absolute bottom-8 md:bottom-16 text-gray-100">
            <Date
                date={pubDate}
                class="text-lg lg:text-xl xl:text-2xl mb-4 md:mb-6"
            />
            <h1
                class="hero-title text-3xl lg:text-4xl xl:text-5xl font-bold font-alegreya"
            >
                {title}
            </h1>
        </div>
    </div>
</section>

<style>
    .hero-image {
        filter: brightness(0.7);
        background-color: rgb(55, 65, 81);
        z-index: -1;
    }
</style>
