---
import { slugify } from "../utils/helpers";

const { tags } = Astro.props;
---

<div>
    <div class="flex flex-wrap gap-2">
        {
            tags.map((tag: string) => (
                <a
                    href={`/tag/${slugify(tag)}`}
                    class="bg-[var(--clr-accent)] rounded p-2 hover:bg-[var(--clr-accent-hover)]"
                >
                    #{tag}
                </a>
            ))
        }
    </div>
</div>
